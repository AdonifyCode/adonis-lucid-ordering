{
  "name": "@adonify/lucid-ordering",
  "version": "1.0.1",
  "description": "Simple ordering for lucid models with AdonisJS.",
  "main": "build/providers/LucidOrderingProvider.js",
  "types": "build/adonis-typings/index.d.ts",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node -r @adonisjs/require-ts/build/register bin/test",
    "test:watch": "nodemon -r @adonisjs/assembler/build/register bin/test",
    "clean": "del-cli build",
    "copy:files": "copyfiles \"templates/**/*.txt\" \"instructions.md\" build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile && npm run copy:files",
    "prepublishOnly": "npm run build",
    "format": "prettier --write .",
    "lint": "eslint . --ext=.ts",
    "watch": "npm-watch",
    "release": "np --message=\"chore(release): %s\"",
    "version": "npm run build",
    "commit": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdonifyCode/lucid-ordering.git"
  },
  "author": "adonify.com,justDare",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AdonifyCode/lucid-ordering/issues"
  },
  "homepage": "https://github.com/AdonifyCode/lucid-ordering#readme",
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.3",
    "@adonisjs/core": "^5.8.7",
    "@adonisjs/lucid": "^18.2.0",
    "@adonisjs/mrm-preset": "^5.0.3",
    "@adonisjs/require-ts": "^2.0.13",
    "@japa/assert": "^1.3.6",
    "@japa/run-failed-tests": "^1.1.0",
    "@japa/runner": "^2.2.1",
    "@japa/spec-reporter": "^1.3.1",
    "@poppinss/dev-utils": "^2.0.3",
    "@types/node": "^18.8.3",
    "commitizen": "^4.2.5",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "mrm": "^4.1.6",
    "nodemon": "^2.0.20",
    "np": "^7.6.2",
    "prettier": "^2.7.1",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "peerDependencies": {
    "@adonisjs/core": "^5.8.7",
    "@adonisjs/lucid": "^18.2.0"
  },
  "mrmConfig": {
    "core": false,
    "license": "MIT",
    "services": [],
    "minNodeVersion": "16.13.1",
    "probotApps": []
  },
  "files": [
    "build/src",
    "build/adonis-typings",
    "build/providers",
    "build/instructions.md"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "nodemonConfig": {
    "watch": [
      "src",
      "tests",
      "providers",
      "adonis-typings",
      "test-helpers"
    ],
    "ext": "ts"
  },
  "adonisjs": {
    "types": "@adonify/lucid-ordering",
    "providers": [
      "@adonify/lucid-ordering"
    ],
    "instructionsMd": "./build/instructions.md"
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
